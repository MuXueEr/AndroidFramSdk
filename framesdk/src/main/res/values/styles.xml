<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 一般的listview样式 -->
    <style name="lv_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:fadeEnabled">false</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="btn_dialog">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_dialog_bottom_bg</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 一般的windows的样式 -->
    <style name="window_common" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    <!-- 一般的Dialog样式 -->
    <style name="dlg_common" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="dlg_full_screen">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogBottom" parent="@style/dlg_common">
        <item name="android:windowAnimationStyle">@style/window_translate_bottom</item>
    </style>

    <style name="window_translate_bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="window_translate_top" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_top_in</item>
        <item name="@android:windowExitAnimation">@anim/slide_top_out</item>
    </style>

    <style name="window_translate_left" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="@android:windowExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="window_translate_right" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="@android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="window_fade" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="window_fade_scale" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/fade_scale_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_scale_out</item>
    </style>

    <style name="activity_fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="activity_fade_scale" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_scale_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_scale_out</item>
    </style>

    <style name="activity_translate_bottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_bottom_out</item>
    </style>

</resources>